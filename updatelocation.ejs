
<!-- updatelocation.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Update Location</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <!-- Link to external stylesheet -->
</head>
<body>
  <nav class="navbar">
    <h1>My Locations</h1>
    <div class="links">
      <a href="/">Home</a>
      <a class="new-item-link" href="/addlocation">New Location</a>
    </div>
  </nav>

  <div class="content">
    <div class="update">
      <h2>Update Location</h2>
      <form action="/single-location/<%= location._id %>?_method=PUT" method="POST">
        <label>Name:</label>
        <input type="text" value="<%= location.name %>" id="name" name="name" required />

        <label for="address">Address:</label>
        <textarea id="address" name="address" rows="4" required><%= location.address %></textarea>

        <label for="latitude">Latitude:</label>
        <input type="number" id="latitude" name="latitude" required value="<%= location.latitude %>" />

        <!-- <label>Author:</label>
        <select name="author">
          <option value="Jaskamal">Jaskamal</option>
          <option value="Singh">Singh</option>
        </select> -->

        <label for="longitude">Longitude:</label>
        <input type="number" id="longitude" name="longitude" required value="<%= location.longitude %>" />

        <button type="submit">Update Location</button>
      </form>
    </div>
  </div>
</body>
</html>